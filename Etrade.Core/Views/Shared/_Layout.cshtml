@using Etrade.Core.Models.Helper;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Etrade.Core</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Etrade.Core.styles.css" asp-append-version="true" />
    <link rel="icon" href="~/favicon.ico"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"/>
    <link rel="stylesheet" href="//cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid">
                <a class="navbar-brand" href="~/">
                    <i class="bi bi-apple"></i>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        @if(User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" aria-current="page" href="~/Admin/Home">Admin Paneli</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" aria-current="page" href="~/">Home</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="List">List</a><!--href="~/Home/List"-->
                        </li>
                        
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Category" asp-action="Index">Categories</a><!--href="~/Home/List"-->
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Product" asp-action="Index">Products</a><!--href="~/Home/List"-->
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Role" asp-action="Index">Roles</a><!--href="~/Home/List"-->
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="User" asp-action="Index">Users</a><!--href="~/Home/List"-->
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Order" asp-action="Index">Users</a><!--href="~/Home/List"-->
                            </li>
                        }
                        <li class="nav-item dropdown">
                            @if(User.Identity.Name != null)
                            {
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Profile
                                </a>
                                <ul class="dropdown-menu">

                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Profile" asp-route-id="@User.Identity.Name">@User.Identity.Name</a></li>
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="SignOut">Sign Out</a></li>

                                </ul>
                            }
                            else
                            {
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Sign
                                </a>
                                <ul class="dropdown-menu">

                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="SignIn">SignIn</a></li>
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="SignUp">SignUp</a></li>

                                </ul>
                            }

                        </li>
                    </ul>
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link btn btn-warning position-relative" asp-action="Index" asp-controller="Cart">
                                <i class="bi bi-cart-plus-fill"></i>
                                <span class="badge position-absolute top-0 start-100 translate-middle rounded-pill bg-danger">
                                    @SessionHelper.Count
                                </span>
                            </a>
                        </li>
                    </ul>
                    <form asp-action="Search" asp-controller="Home" class="d-flex" role="search">
                        <input class="form-control me-2" type="search" name="query" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-success" type="submit">Search</button>
                    </form>
                </div>
            </div>
        </nav>


    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="container d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top">
        <div class="col-md-4 d-flex align-items-center">
            <a href="/" class="mb-3 me-2 mb-md-0 text-body-secondary text-decoration-none lh-1">
                <i class="bi bi-bootstrap-fill"></i>
            </a>
            <span class="mb-3 mb-md-0 text-body-secondary">© 2023 Company, Inc</span>
        </div>

        <ul class="nav col-md-4 justify-content-end list-unstyled d-flex">
            <li class="ms-3">
                <a class="text-body-secondary" href="#">
                    <i class="bi bi-twitter"></i>
                </a>
            </li>
            <li class="ms-3">
                <a class="text-body-secondary" href="#">
                    <i class="bi bi-instagram"></i>
                </a>
            </li>
            <li class="ms-3">
                <a class="text-body-secondary" href="#">
                    <i class="bi bi-facebook"></i>
                </a>
            </li>
        </ul>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script href="//cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js" integrity="sha512-3gJwYpMe3QewGELv8k/BX9vcqhryRdzRMxVfq6ngyWXwo03GFEzjsUm8Q7RZcHPHksttq7/GFoxjCVUjkjvPdw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script>
        $(document).ready(function () {
            $('#dataTable').DataTable();
        });

        function addToCart(id) 
        {
            var quantity = $("#quantity").val();
            $.ajax({
                url:'/Cart/AddToCart',
                type:'POST',
                data:{Id:id,Q:quantity},
                success:function(response){
                    //alert('ürün sepete eklendi')
                    location.reload();
                },
                error:function(xhr,status,error){
                    alert('Hata olustu'+error)
                }

            });
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
