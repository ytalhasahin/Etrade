@model List<Etrade.Entity.Models.ViewModels.RoleAssignViewModel>
@{
    ViewData["Title"] = "RoleAssign";
}

<h1>RoleAssign</h1>
<h3>ViewBag.Username</h3>
<hr />
<form asp-action="RoleAssign">
    <table class="table table-bordered table-striped w-25">
        <thead>
            <tr>
                <th>Role Adı</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>
                        <input type="checkbox" asp-for="@Model[i].HasAssign" />
                        @Model[i].Name
                        <input type="hidden" asp-for="@Model[i].Name" />
                        <input type="hidden" asp-for="@Model[i].Id" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <input type="submit" value="RoleAssign" class="btn btn-warning" />
</form>
